<main class="page-container">
  <h1 class="mx-3 mb-5 text-center booking-hl">Your Bookings</h1>

  <section class="booking-container">
    <header class="row">
      <h6 class="col">Station<br>Equipment</h6>
      <%# <h6 class="col">Equipment</h6> %>
      <h6 class="col"><i class="far fa-calendar-alt"></i></h6>
      <h6 class="col"><i class="far fa-clock"></i></h6>
    </header>

    <% @bookings.each do |booking| %>
    <hr>
      <section class="row">
        <p class="col"><%= booking.equipment_offer.station.name %><br><%= booking.equipment_offer.name %></p>
        <%# <p class="col"><%= booking.equipment_offer.name %></p> 
        <p class="col"><%= booking.begin_at.strftime("%b %d, %y") %></p>

        <% t = (booking.end_at - booking.begin_at).round.abs %>
        <% mm, ss = t.divmod(60) %>
        <% hh, mm = mm.divmod(60) %>
        <% if ss.between?(0, 10) %>
          <h6 class="col"><%= "#{hh}:#{mm}:0#{ss}" %> </h6>
        <% elsif mm.between?(0, 10) %>
          <h6 class="col"><%= "#{hh}:0#{mm}:#{ss}" %> </h6>
        <% elsif hh.between?(0, 10) %>
          <h6 class="col"><%= "#{hh}:#{mm}:0#{ss}" %> </h6>
        <% else %>
          <h6 class="col"><%= "#{hh}:#{mm}:#{ss}" %> </h6>
        <% end %>
      </section>
    <% end %>
  </section>
  <%= render 'shared/footer' %>
</main>
