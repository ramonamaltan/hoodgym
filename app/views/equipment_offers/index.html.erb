<div class="container-training">
  <h1><%= @station.name %></h1>

  <p>1 Item in Ausleihe</p>
  <div class="current-rent">
  <div class="flex-spacebetween">
    <p>7-15kg</p>
    <p>00:13:42</p>
  </div>
  <div class="flex-spacebetween">
    <p>Gesamt:</p>
    <p>&nbsp;00:28:19</p>
  </div>
  </div>

  <% @equipment_offers.each do |item| %>
    <div class="equipment-overview">
      <h5><%= item.name %></h5>
      <% if item.availability == true %>
        <button class="btn-green">Rent now</button>
      <% elsif item.availability == false # && current user is renting %>
        <%# item.rentals.each do |rental| %>
          <%#= rental.user_id %>
        <%# end %>
        <button class="btn-yellow">rented by you</button>
      <% else %>
        <button class="btn-darkred">In use</button>
      <% end %>
    </div>
  <% end %>
</div>
