<div class="container">
  <h1><%= @chatroom.name.capitalize %></h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <div class="message-container my-4" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.email %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%= form_with(model: @message, url: [@chatroom, @message]) do |form| %>
    <%= form.text_field :content, label: false, placeholder: "Enter Message", class: 'form-control mt-2' %>
  <% end %>
</div>