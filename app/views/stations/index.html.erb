<div class="center-station-cards">
  <div id="map"
      style="width: 100%; height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="container">
    <div id="section1-container"> 
      <div class="stations-cards p-3">
          <% @stations.each do |station| %>
          <div class="card-station py-2">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="card-station-infos">
              <h2><%= station.name %></h2>
              <p>Station description with <strong>relevant info</strong> only.</p>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>